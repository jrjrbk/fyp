<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewAlbum"
    android:background="@drawable/gradient_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:text="Album"
        android:fontFamily="@font/sfprodisplay"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/albumSongItemRV"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_corners_playlist" />

    <ImageView
        android:id="@+id/albumItemImage"
        android:scaleType="centerCrop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/baseline_broken_image_24"
        android:layout_gravity="top|center"
        android:background="@drawable/rounded_corners_background"
        android:layout_marginTop="45dp"
        />

    <TextView
        android:id="@+id/albumItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.Morale and The Big Steppers"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="top|center"
        android:layout_marginTop="140dp"
        />

    <TextView
        android:id="@+id/albumArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kendrick Lamar ● 2022"
        android:layout_gravity="top|center"
        android:layout_marginTop="170dp"
        />


</FrameLayout>