<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".RegisterActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlineConfirmPassword"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="336sp"
        android:layout_height="53sp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#FF4343"
        app:boxCornerRadiusBottomEnd="8sp"
        app:boxCornerRadiusBottomStart="8sp"
        app:boxCornerRadiusTopEnd="8sp"
        app:boxCornerRadiusTopStart="8sp"
        app:hintTextColor="#B3FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlinePasswordReg"
        app:layout_constraintVertical_bias="0.16000003">

        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:hint="min. 8 characters"
            android:inputType="text|textPassword"
            android:textColorHint="#80FFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/confirm_password"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/outlineConfirmPassword"
        app:layout_constraintEnd_toEndOf="@+id/outlineConfirmPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/outlineConfirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/outlinePasswordReg"
        app:layout_constraintVertical_bias="0.26" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinePasswordReg"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="336sp"
        android:layout_height="53sp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#FF4343"
        app:boxCornerRadiusBottomEnd="8sp"
        app:boxCornerRadiusBottomStart="8sp"
        app:boxCornerRadiusTopEnd="8sp"
        app:boxCornerRadiusTopStart="8sp"
        app:hintTextColor="#B3FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlineEmailReg"
        app:layout_constraintVertical_bias="0.13">

        <EditText
            android:id="@+id/editTextPasswordReg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:hint="min. 8 characters"
            android:inputType="text|textPassword"
            android:textColorHint="#80FFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/registerPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/password"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/outlinePasswordReg"
        app:layout_constraintEnd_toEndOf="@+id/outlinePasswordReg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/outlinePasswordReg"
        app:layout_constraintTop_toBottomOf="@+id/outlineEmailReg"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/regTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfprodisplay"
        android:text="Register"
        android:textColor="#F3EAEA"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlineEmailReg"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="336sp"
        android:layout_height="53sp"
        app:boxCornerRadiusBottomEnd="8sp"
        app:boxCornerRadiusBottomStart="8sp"
        app:boxCornerRadiusTopEnd="8sp"
        app:hintTextColor="#B3FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regTV"
        app:layout_constraintVertical_bias="0.13">

        <EditText
            android:id="@+id/editTextEmailReg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:hint="name@example.com"
            android:inputType="textEmailAddress"
            android:textColorHint="#80FFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/regEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/email"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/outlineEmailReg"
        app:layout_constraintEnd_toEndOf="@+id/outlineEmailReg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/outlineEmailReg"
        app:layout_constraintTop_toBottomOf="@+id/regTV"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/regButton"
        android:layout_width="336sp"
        android:layout_height="53sp"
        android:backgroundTint="#FF4343"
        android:fontFamily="@font/inter"
        android:text="CREATE ACCOUNT"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:cornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlineConfirmPassword"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:id="@+id/bottomTextReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Have an account already?"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loginButtonReg"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regButton" />

    <TextView
        android:id="@+id/loginButtonReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="false"
        android:fontFamily="@font/inter"
        android:lineSpacingExtra="8sp"
        android:text="Log in"
        android:textColor="#FF4343"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regButton" />

</androidx.constraintlayout.widget.ConstraintLayout>